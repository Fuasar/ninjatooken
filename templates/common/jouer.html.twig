{% extends 'layout.html.twig' %}

{% block title %}NinjaTooken - {{ 'menu.jouer'|trans({}, 'menu') }}{% endblock %}
{% block description %}{{ 'description.meta.jouer'|trans }}{% endblock %}
{% block keywords %}{{ 'keywords.meta.jouer'|trans }}{% endblock %}

{% block breadcrumbs1 %}{% endblock %}

{% block breadcrumbs2 %}
							<span itemscope itemtype="http://data-vocabulary.org/Breadcrumb">
								<a href="{{ path('ninja_tooken_jouer') }}" itemprop="url">
									<span itemprop="title">{{ 'menu.jouer'|trans({}, 'menu') }}</span>
								</a>
							</span>
{% endblock %}

{% block body %}
                <div class="row-fluid">
					<section class="span8 main">
						<h3>{{ 'gameDownload.nom'|trans({}, 'common') }}</h3>
                        <p>{{ ('gameDownload.description')|trans({}, 'common')|raw }}</p>
					</section>
					<aside class="span4">
						<form action="{{ path('ninja_tooken_search') }}" method="post" accept-charset="utf-8" class="row-fluid">
							<input type="text" name="q" value="{{ 'action.chercher'|trans({}, 'common') }}" class="span10">
							<input type="submit" name="s" value="{{ 'action.ok'|trans({}, 'common') }}" class="span2">
						</form>

						{{ render(controller('App\\Controller\\ForumController::recentComments', {'max': 10, 'forum': 0})) }}

						{% include 'common/pubAside.html.twig' %}

						{% include 'common/partenaires.html.twig' %}
					</aside>
				</div>
{% endblock %}
