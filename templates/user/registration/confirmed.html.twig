{% extends "layout.html.twig" %}

{% block breadcrumbs1 %}{% endblock %}
{% block breadcrumbs2 %}&nbsp;{% endblock %}
{% block body %}
    <div class="flash-notice"><p>{{ 'registration.confirmed'|trans({'%username%': user.username}, 'user') }}</p></div>
    {% if app.session is not empty %}
        {% set targetUrl = app.session.get('_security.' ~ app.security.token.providerKey ~ '.target_path') %}
        {% if targetUrl is not empty %}<p><a href="{{ targetUrl }}">{{ 'registration.back'|trans({}, 'user') }}</a></p>{% endif %}
    {% endif %}
{% endblock %}
