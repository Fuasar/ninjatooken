{% extends "layout.html.twig" %}

{% block title %}NinjaTooken - {{ 'compte.connect.titre'|trans({}, 'common') }}{% endblock %}
{% block description %}{{ 'compte.connect.meta.description'|trans({}, 'common') }}{% endblock %}
{% block keywords %}{{ 'compte.connect.meta.keywords'|trans({}, 'common') }}{% endblock %}


{% block breadcrumbs1 %}{% endblock %}

{% block breadcrumbs2 %}
                            <span itemscope itemtype="http://data-vocabulary.org/Breadcrumb">
                                <a href="{{ path('ninja_tooken_user_security_login') }}" itemprop="url">
                                    <span itemprop="title">{{ 'compte.connect.titre'|trans({}, 'common') }}</span>
                                </a>
                            </span>
{% endblock %}

{% block body %}

                {% if error %}
                    <div class="flash-notice">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                <form method="post" accept-charset="UTF-8" class="full">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" />
                    <input type="hidden" name="_target_path" value="{% apply spaceless %}
                      {% if app.request.headers.get('referer') != url(app.request.get('_route')) %}
                        {{ app.request.headers.get('referer') }}
                      {% endif %}
                    {% endapply %}"/>
                    <div class="row-fluid">
                        <div class="span3 offset1">
                            <label class="libelle required" for="pseudo">{{ 'compte.register.pseudo'|trans({}, 'common') }}</label>
                        </div>
                        <div class="span8">
                            <input type="text" id="pseudo" name="username" value="{{ last_username }}" required>
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span3 offset1">
                            <label class="libelle required" for="pwd">{{ 'compte.register.motPasse'|trans({}, 'common') }}</label>
                        </div>
                        <div class="span8">
                            <input type="password" name="password" id="pwd" value="" required>
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span8 offset4">
                            <input type="checkbox" name="_remember_me" value="1" id="remember"><label for="remember"> {{ 'compte.connect.remember'|trans({}, 'common') }}</label>
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span8 offset4">
                            <input type="submit" value="{{ 'compte.connect.titre'|trans({}, 'common') }}" class="button">
                            <p>{{ 'compte.connect.motPasseOubli'|trans({}, 'common') }} <a href="{{ path('ninja_tooken_user_resetting_request') }}">{{ 'compte.connect.motPasseReset'|trans({}, 'common') }}</a> !</p>
                            <p>{{ 'compte.connect.noCompte'|trans({}, 'common') }} <a href="{{ path('ninja_tooken_user_registration_register') }}">{{ 'compte.request.inscrisToi'|trans({}, 'common') }}</a> !</p>
                        </div>
                    </div>
                </form>
{% endblock %}
