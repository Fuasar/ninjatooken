{% macro getUrl(user) %}{% spaceless %}
{% if user.avatar is empty %}
	{% if user.gender == "m" %}
		{{ asset('bundles/ninjatookenuser/images/boyz.jpg') }}
	{% else %}
		{{ asset('bundles/ninjatookenuser/images/girlz.jpg') }}
	{% endif %}
{% else %}
	{{ ('avatar/' ~ user.avatar) | imagine_filter('avatar') }}
{% endif %}
{% endspaceless %}{% endmacro %}